<style>
  /* Billede med tekst */
  .billede_med_tekst {
    display: grid;
    place-items: center;
    position: relative;
  }
  .hero_img {
    display: block;
    object-fit: cover;
    width: 100%;
    min-width: 100%;
    height: auto;
  }

  .hero_video {
    display: block;
    object-fit: cover;
    width: 100%;
    min-width: 100%;
    height: auto;
  }

  .tekst {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    z-index: 1;
  }
  .hero_tekst {
    color: var(--offBlack);
    background-color: var(--offWhite);
    padding: 5px 5px;
    border-radius: 2px;
  }

  .header_undertekst {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 2rem;

    color: var(--offBlack);
    background-color: var(--offWhite);
    padding: 5px 5px;
    font-weight: normal;
    border-radius: 2px;
  }

  .hero_icon {
    width: 50px;
    height: 50px;
  }

  /***************************** TÃ¸j infinite carousel  ******************************/

  .toej {
    display: block;
    object-fit: cover;
    width: 100%;
    min-width: 100%;
    height: auto;
  }
  @keyframes slide {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }

  .toej {
    overflow: hidden;
    white-space: nowrap;
  }

  .toej:hover .toej-slide {
    animation-play-state: paused;
  }
  .toej-slide {
    display: inline-block;
    animation: 45s slide infinite linear;
  }

  .toej-slide img {
    width: auto;
    height: 100px;
  }

  /***** Desktop *****/
  @media (min-width: 800px) {
    .toej-slide img {
      height: 200px;
    }
  }

  /***************************** Sissel Edelbo infinite carousel ******************************/

  .sissel {
    display: block;
    object-fit: cover;
    width: 100%;
    min-width: 100%;
    height: auto;
  }

  @keyframes slide {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }

  .sissel {
    overflow: hidden;
    white-space: nowrap;
    background-color: var(--groen200);
  }

  .sissel-slide {
    display: inline-block;
    animation: 45s slide infinite linear;
  }

  .sissel-slide img {
    width: auto;
    height: 28px;
  }
  /***** Desktop *****/
  @media (min-width: 800px) {
    .sissel-slide img {
      height: 32px;
    }
  }
</style>
