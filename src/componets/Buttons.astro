---
const { variant, size, link, displayText } = Astro.props;
---

<a class={variant + " " + size} href={link}>{displayText}</a>

<style>
  a {
    padding: 5px 10px;
    cursor: pointer;
    font-family: "Biryani", sans-serif;
    font-weight: 400;
    font-style: normal;
    border-radius: 3px;
    text-align: center;
    color: var(--offWhite);
    text-decoration: none;
  }

  @media (min-width: 800px) {
    a {
      padding: 8px 15px;
    }
  }

  /********** variant **********/
  .primary {
    border: 5px solid var(--lyserRoed600);
    background-color: var(--lyserRoed600);
  }

  .primary:hover {
    background-color: var(--lyserRoed400);
    transition: 0.5s;
  }
</style>
