---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    padding: 5px 10px;
    cursor: pointer;
    font-family: "Biryani", sans-serif;
    font-weight: 400;
    font-style: normal;
  }

  @media (min-width: 800px) {
    button {
      padding: 8px 15px;
    }
  }

  /********** variant **********/
  .primary {
    border: 2px solid var(--lyserRoed600);
    background-color: var(--lyserRoed600);
  }

  .primary:hover {
    background-color: var(--lyserRoed400);
    transition: 0.5s;
  }
</style>
