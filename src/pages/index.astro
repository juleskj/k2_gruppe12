<style>
  /***************************** Tøj infinite carousel  ******************************/

  @keyframes slide {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }

  .toej {
    overflow: hidden;
    white-space: nowrap;
  }

  .toej:hover .toej-slide {
    animation-play-state: paused;
  }
  .toej-slide {
    display: inline-block;
    animation: 45s slide infinite linear;
  }

  .toej-slide img {
    width: auto;
    height: 100px;
  }

  /***** Desktop *****/
  @media (min-width: 800px) {
    .toej-slide img {
      height: 200px;
    }
  }

  /***************************** Sissel Edelbo infinite carousel  ******************************/

  @keyframes slide {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }

  .sissel {
    overflow: hidden;
    white-space: nowrap;
    background-color: var(--groen200);
  }

  .sissel-slide {
    display: inline-block;
    animation: 45s slide infinite linear;
  }

  .sissel-slide img {
    width: auto;
    height: 28px;
  }
  /***** Desktop *****/
  @media (min-width: 800px) {
    .sissel-slide img {
      height: 32px;
    }
  }

  /***************************** Billide med tekstbox  ******************************/

  .background-image {
    background-image: url(/public/img/kontakt_placeholder_2.png);
    background-repeat: no-repeat;
    background-size: cover;
    width: 100%;
    height: 800px;
  }

  .billede_med_tekst {
    display: grid;
    place-items: center;
    position: relative;
  }

  .tekstbox {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    background-color: rgba(255, 250, 250, 0.8);
    padding: 30px;
  }

  .p {
    width: 200px;
  }

  .luft_om {
    padding-bottom: 15px;
  }
  .luft_om_h2 {
    padding-bottom: 25px;
  }

  /*Desktop*/
  @media (min-width: 800px) {
    .background-image {
      background-image: url(/public/img/kontakt_placeholder.png);
      background-repeat: no-repeat;
      background-size: cover;
      width: 100%;
      height: 600px;
    }
    .tekstbox {
      transform: translate(-100%, -50%);
    }

    .p {
      width: 400px;
    }
  }

  /***************************** Knap ******************************/
</style>

