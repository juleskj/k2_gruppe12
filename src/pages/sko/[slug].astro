//her henter vi data ned fra en enkelt sko som kommer fra listeview
export async function getStaticPaths() {
  const data = await fetch(
    "https://xdwlizqafawwahsaxilk.supabase.co/rest/v1/k2",
    {
      method: "GET",
      headers: {
        apikey:
          "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Inhkd2xpenFhZmF3d2Foc2F4aWxrIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MTYzNjI3ODEsImV4cCI6MjAzMTkzODc4MX0.YV7fOme_czbNaDg9hVyfGOe8Tt3UwV0wnnyKZrlbPOw",
      },
    }
  ).then((response) => response.json());
  return data.map((sko) => {
    return {
      params: { slug: sko.slug },
      props: { myData: sko },
    };
  });
}
const { myData } = Astro.props;
---

<Layout titel="tittel">
  <div class="desktop">
    <div class="sko">
      <div class="enkeltsko">
        {myData.nyhed && <p class="nyhed">Nyhed</p>}
        {myData.udsalg && <p class="udsalg">Udsalg</p>}
        <img
          class="produktimg"
          src={"/img/listeveiw/" + myData.produktimg}
          alt={"billede af " + myData.produkt_beskrivelse}
        />
      </div>
      <div class="ekstrabillede">
        <img
          class="produktimg"
          src={"/img/listeveiw/" + myData.ekstrabillede1}
          alt={"ekstra billede af " + myData.produkt_beskrivelse}
        />
        <img
          class="produktimg"
          src={"/img/listeveiw/" + myData.ekstrabillede2}
          alt={"ekstra billede af " + myData.produkt_beskrivelse}
        />
        <img
          class="produktimg"
          src={"/img/listeveiw/" + myData.ekstrabillede3}
          alt={"ekstra billede af " + myData.produkt_beskrivelse}
        />
      </div>
    </div>
    <div class="produkt_info">
      <div class="col">
        <h1 class="produktnavn card_h1">{myData.produktnavn}</h1>

        <p class="Sko_variant">{myData.sko_variant}</p>
      </div>
      <div class="col">
        <div class="prik">
          <div class="color1"><img src="/img/prik.png" alt="" /></div>
          <div class="color2"><img src="/img/prik.png" alt="" /></div>
          <div class="color3"><img src="/img/prik.png" alt="" /></div>
        </div>

        <p class="beskrivelse">{myData.produkt_beskrivelse}</p>
      </div>
      <div class="col">
        {
          myData.beforepris && (
            <p class="before">Før pris: {myData.beforepris} DKK</p>
          )
        }

        <p>{myData.price}</p>

        <p class="newprice">{myData.afterpris} DKK</p>
      </div>
      <div class="col flex_1_1">
        <form>
          <select name="size" id="size">
            <option value="37">37</option>
            <option value="38">38</option>
            <option value="39">39</option>
            <option value="40">40</option>
            <option value="41">41</option>
            <option value="42">42</option>
          </select>
          <br /><br />
          <input type="submit" value="Læg i kurv" />
        </form>
      </div>
    </div>
  </div>
  <div class="inspiration_col">
    <h2>Bliv inspireret</h2>
    <div class="inspiration">
      {
        data.slice(0, 4).map((sko) => {
          return <Card data={sko} />;
        })
      }
    </div>
  </div>
</Layout>

<style>
  .flex_1_1 {
  }

  input[type="submit"] {
    width: 100px;
    height: 40px;
    color: white;
    border: 2px solid var(--lyserRoed600);
    background-color: var(--lyserRoed600);
    border-radius: 3px;
  }

  input[type="submit"]:hover {
    background-color: var(--lyserRoed400);
    transition: 0.5s;
  }
  .before {
    text-decoration: line-through red 2px;
  }
  .udsalg {
    position: absolute;
    right: 0;
    bottom: 0;
    padding: 5px;
    text-transform: uppercase;
  }
  .nyhed {
    position: absolute;
    top: 0;
    padding: 5px;
    text-transform: uppercase;
  }
  .enkeltsko {
    position: relative;
    width: 100%;
    height: 100%;
    justify-content: center;
  }
  .ekstrabillede {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }
  .ekstrabillede img {
    height: 100px;
    width: 100px;
    object-fit: cover;
    flex: 1 1 auto;
  }
  .produktnavn {
    padding-top: 40px;
  }

  .color1,
  .color2,
  .color3 {
    border-radius: 50%;
    width: 30px;
    height: 30px;
    background-color: black;
  }
  .prik {
    display: flex;
    flex-direction: row;
    gap: 15px;
  }

  .inspiration {
    display: flex;
    flex-direction: row;
    gap: 50px;
    flex-wrap: wrap;
  }
  .inspiration_col {
    padding: 100px 0;
  }

  @media (min-width: 800px) {
    .inspiration {
      flex-wrap: nowrap;
    }
    .desktop {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
      gap: 40px;
    }
    .sko {
      min-width: 250px;
      max-width: 500px;
      flex: 1 1 auto;
    }
    .produkt_info {
      display: flex;
      flex-direction: column;
      gap: 4rem;
      min-width: 250px;
      flex: 1 1 auto;
    }
    .col {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .ekstrabillede img {
      height: 100%;
      width: 150px;
    }
  }
</style>
