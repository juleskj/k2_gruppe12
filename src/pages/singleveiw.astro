---
import Layout from "../componets/Layout.astro";
import Card from "../componets/Card.astro";
---

<Layout titel="Singleveiw">
  <p class="nyhed">NYHED</p>
  <div class="sko">
    <div class="enkeltsko">
      <img class="produktbillede" src="/public/img/skosingleveiw.png" alt="placeholder" />
    </div>
    <div class="ekstrabillede">
      <img class="produktbillede" src="/public/img/placeholder.png" alt="placeholder" />
      <img class="produktbillede" src="/public/img/placeholder.png" alt="placeholder" />
      <img class="produktbillede" src="/public/img/placeholder.png" alt="placeholder" />
      <img class="produktbillede" src="/public/img/placeholder.png" alt="placeholder" />
    </div>
  </div>

  <h1 class="produktnavn card_h1">Mærke mærke</h1>

  <p class="varienat">variant</p>
  <p class="maerke">Mærke</p>
  <div class="prik">
    <div class="color1"><img src="/public/img/prik.png" alt="" /></div>
    <div class="color2"><img src="/public/img/prik.png" alt="" /></div>
    <div class="color3"><img src="/public/img/prik.png" alt="" /></div>
  </div>
  <p class="beskrivelse">Beskrivelse</p>
  <p class="before">Før pris</p>
  <p class="newprice">Ny pris</p>
  <button>størrelse</button>
  <button>Læg i kurv</button>
  <p class="inspi_tekts">Du vil måske også lide</p>
  <div class="inspiration">
    <Card />
    <Card />
    <Card />
    <Card />
  </div>
</Layout>

<style>
  .enkeltsko {
    width: 100%;
    height: 100%;
    justify-content: center;
  }
  .ekstrabillede {
    display: flex;
    flex-direction: row;
    gap: 20px;
    justify-content: center;
  }
  .ekstrabillede img {
    height: 70px;
    width: 70px;
    object-fit: cover;
    flex: 1 1 auto;
  }
  .produktnavn {
    padding-top: 40px;
  }

  .color1,
  .color2,
  .color3 {
    border-radius: 900px;
    width: 30px;
    height: 30px;
    background-color: black;
  }
  .prik {
    display: flex;
    flex-direction: row;
    gap: 15px;
  }
  .inspiration {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 15px;
    padding-top: 30px;
  }
  .inspiration {
    height: 200px;
    width: 200px;
    object-fit: cover;
  }
  .inspi_tekts {
    padding-top: 50px;
    padding-left: 140px;
  }
</style>
