---
import Layout from "../componets/Layout.astro";
import Buttons from "../componets/Buttons.astro";
---

<Layout titel="Kurv">
  <div class="produkt_info">
    <h2>Din kurv</h2>
    <div class="desktop_row">
      <div class="card">
        <img src="/img/placeholder.png" alt="placeholder" />
        <div class="info">
          <p class="str">str: 37</p>
          <p class="before_pris">Før: 1000Dkk</p>
          <p class="new_pris">800DKK</p>
        </div>
      </div>

      <div class="udgifter">
        <div class="udgifter_info">
          <p>Rabat</p>
          <p>Subtotal</p>

          <p><strong>I Alt</strong></p>
        </div>
        <div class="udgifter_tal">
          <p class="rabat">200 DKK</p>
          <p class="subtotal">800 DKK</p>

          <p class="i_alt"><strong>600 DKK</strong></p>
        </div>
      </div>
    </div>
    <a href="/betalingsformat">Går til betaling</a>
    <Buttons variant="primary"
      ><a href="/betalingsformat">Går til betaling</a></Buttons
    >
  </div>
</Layout>

<style>
  /* her bliver produkt informationen stylet */
  .produkt_info {
    display: flex;
    flex-direction: column;
    gap: 40px;
    padding-bottom: 100px;
  }
  .card {
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    align-items: flex-start;
    gap: 20px;
  }
  .card img,
  .info {
    width: 100px;
    flex: 1 1 auto;
  }

  .info {
    display: grid;
    grid-template-columns: 1fr 2fr;
    justify-items: end;
  }
  .new_pris {
    grid-area: 2/ 2 / 3 /3;
  }

  .udgifter {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
  }

  @media (min-width: 800px) {
    .desktop_row {
      display: flex;
      flex-direction: row;
      justify-content: space-around;
      padding-bottom: 100px;
    }

    .udgifter,
    .card {
      gap: 100px;
    }

    .card img {
      height: 100%;
      width: 250px;
    }
  }
</style>
